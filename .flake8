[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503, E231
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    *.egg-info
max-complexity = 5
docstring-convention = google
per-file-ignores =
    __init__.py:F401,D104
    test_*.py:S101,PLR2004,ANN201